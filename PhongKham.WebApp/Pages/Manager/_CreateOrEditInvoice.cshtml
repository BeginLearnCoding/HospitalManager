@using PhongKham.Core.Entities
@model Invoice
<form id="create-form" method="post" asp-page= "/Manager/Invoice" asp-route-id="@Model.Id" asp-page-handler="CreateOrEdit" onsubmit="return jQueryModalPost(this);">
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Invoice Note</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="InNote" name="appNote" class="form-control">
            <span asp-validation-for="InNote" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">App Date</label>
        <div class="col-md-9">
            <input type="datetime-local" autocomplete="off" asp-for="InDatetime" name="appDate" class="form-control">
            <span asp-validation-for="InDatetime" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Medicine</label>
        <div class="col-md-9">
            <select asp-for="Medicines" name="Medicines" class="form-control">
                @foreach (var medicine in Model.Medicines)
                {
                    <option value="@medicine.Id">@medicine.medName</option>
                }
            </select>
            <span asp-validation-for="Medicines" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
        </div>
    </div>
    <div class="form-group justify-content-between">
        <button type="button" class="btn btn-secondary close-button" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary save-button">Save</button>
    </div>

</form>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>
