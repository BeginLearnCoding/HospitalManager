@using PhongKham.Core.Entities
@model Invoice
<form id="create-form" method="post" asp-page="/Manager/Invoice" asp-route-id="@Model.Id" asp-page-handler="CreateOrEdit" onsubmit="return jQueryModalPost(this);">
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Invoice Note</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="InNote" name="InNote" class="form-control">
            <span asp-validation-for="InNote" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Invoice Date/Time</label>
        <div class="col-md-9">
            <input type="datetime-local" autocomplete="off" asp-for="InDatetime" name="InDatetime" class="form-control">
            <span asp-validation-for="InDatetime" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label for="AppointmentId">Appointment ID</label>
        <input type="number" class="form-control" id="AppointmentId" asp-for="AppointmentId">
    </div>
    <div class="form-group">
        <label for="PaymentMethod">Payment Method</label>
        <select class="form-control" id="PaymentMethod" asp-for="PaymentMethod">
            <option value="">-- Select --</option>
            @foreach (var value in Enum.GetValues(typeof(PaymentMethod)))
            {
                <option value="@value">@value</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="PaymentStatus">Payment Status</label>
        <select class="form-control" id="PaymentStatus" asp-for="PaymentStatus">
            <option value="">-- Select --</option>
            @foreach (var value in Enum.GetValues(typeof(PaymentStatus)))
            {
                <option value="@value">@value</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="Medicines">Medicines </label> 
        <select class="form-control" id="Medicines" asp-for="InvoiceMedicines" multiple>
            <option value="">-- Select --</option> @foreach (var value in Model.InvoiceMedicines)
            {
                <option value="@value">@value.Medicine.medName</option>
}
        </select>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
        </div>
    </div>
    <div class="form-group justify-content-between">
        <button type="button" class="btn btn-secondary close-button" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary save-button">Save</button>
    </div>

</form>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>
