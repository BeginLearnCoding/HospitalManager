@using PhongKham.Core.Entities
@model IEnumerable<Medicine>


<!-- Basic Bootstrap Table -->
<div class="card">
    <h5 class="card-header">Medicine List</h5>
    <div class="table-responsive text-nowrap">
        <table class="table" id="medicineTable">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Name</th>
                    <th>In Stock</th>
                    <th>Price per one</th>
                    <th>Specialize</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @if (Model.Count() != 0)
                {


                    @foreach (var medicine in Model)
                    {
                        <tr>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@medicine.Id</strong></td>
                            <td>@medicine.medOutdate.ToString("MM/dd/yyyy")</td>
                            <td> @medicine.medName</td>
                            <td>@medicine.medInStock</td>
                            <td>@medicine.medPrice $</td>
                            <td>@medicine.Specialize.specName</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" onclick="jQueryModalGet('?handler=CreateOrEdit&id=@medicine.Id','Edit Appointment')">
                                            <i class="bx bx-edit-alt me-1"></i>
                                            Edit
                                        </a>
                                        <form class="dropdown-item d-inline" method="post" asp-page="Medicine" asp-route-id="@medicine.Id" asp-page-handler="Delete" onsubmit="return jQueryModalDelete(this)">
                                            <button type="submit">
                                                <i class="bx bx-trash me-1"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

    </div>
</div>
<!--/ Basic Bootstrap Table -->
