@using PhongKham.Core.Entities
@model Medicine
<form id="create-form" method="post" asp-page="/Manager/Medicine" asp-route-id="@Model.Id" asp-page-handler="CreateOrEdit" onsubmit="return jQueryModalPost(this);">
    <div class="form-group row">
        <label class="col-md-3 col-form-label"> Medicine Name</label>
        <div class="col-md-9">
            <input type="text" autocomplete="off" asp-for="medName" name="medName" class="form-control">
            <span asp-validation-for="medName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Medicine out/date</label>
        <div class="col-md-9">
            <input type="datetime-local" autocomplete="off" asp-for="medOutdate" name="medOutdate" class="form-control">
            <span asp-validation-for="medOutdate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label"> Medicine In stock</label>
        <div class="col-md-9">
            <input type="number" autocomplete="off" asp-for="medInStock" name="medInStock" class="form-control">
            <span asp-validation-for="medInStock" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label"> Medicine Price per unit</label>
        <div class="col-md-9">
            <input type="number" autocomplete="off" asp-for="medPrice" name="medPrice" class="form-control">
            <span asp-validation-for="medPrice" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Specialize Type</label>
        <div class="col-md-9">
            <select asp-for="SpecializeId" name="SpecializeId" class="form-control">
                <option value="">-- Select --</option>
                <!-- Add options for the enum values here -->
                <option value="1">Hồi sức tích cực</option>
                <option value="2">Gây mê</option>
                <option value="3">Tâm thần</option>
                <option value="4">Bệnh truyền nhiễm</option>
                <option value="5">Chấn thương chỉnh hình</option>
            </select>
            <span asp-validation-for="SpecializeId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
        </div>
    </div>
    <div class="form-group justify-content-between">
        <button type="button" class="btn btn-secondary close-button" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary save-button">Save</button>
    </div>

</form>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>
